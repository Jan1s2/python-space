<Invader>:
    size: 40, 40
    Image:
        source: root.source
        pos: root.pos
        size: root.size
<Projectile>:
    size: 5, 25
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
<Player>:
    size: 40, 40
    Image:
        source: "images/player.png"
        pos: root.pos
        size: root.size
<SpaceInvadersGame>:
    player: player
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Player:
        id: player
        center_x: root.width / 2
        center_y: 20
    Label:
        id: score_label
        pos: self.width - 50, root.height - 75
        font_size: 40
        text: "Score: 0"
    Label:
        id: lives_label
        pos: root.width - self.width - 50, root.height - 75
        font_size: 40
        text: "Lives: 0"
